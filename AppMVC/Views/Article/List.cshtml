@model BusinessLayer.Models.Article.ArticleListModel

@{
    ViewBag.Title = "Статьи";
    Layout = "_Layout";
}

<div class="d-flex mb-3">
    <div class="me-3">
        <p class="fs-2 fw-bold">Статьи</p>
    </div>
    <div class="mt-2">
        <a class="btn btn-outline-success" asp-controller="Article" asp-action="Create">
            Добавить
        </a>
    </div>
</div>

<div class="row">
    @foreach (var article in Model.Articles)
    {
        <div class="card mb-3 me-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@article.Title</h5>
                <p class="card-text">@(article.Content?.Length > 30 ? $"{article.Content?[..30]}..." : article.Content)</p>
                <a asp-controller="Article" asp-action="Item" asp-route-id="@article.Id" class="btn btn-primary">Читать</a>
            </div>
        </div>
    }
</div>