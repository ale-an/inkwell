@model BusinessLayer.Models.User.UserListModel

@{
    ViewBag.Title = "Пользователи";
    Layout = "_Layout";
}

<div class="d-flex mb-3">
    <div class="me-3">
        <p class="fs-2 fw-bold">Пользователи</p>
    </div>
    <div class="mt-2">
        <a class="btn btn-outline-success" asp-controller="User" asp-action="Create">
            Добавить
        </a>
    </div>
</div>

<div class="row">
    @foreach (var user in Model.Users)
    {
        <div class="card mb-3 me-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@user.Name</h5>
                <p class="card-text">@user.Email</p>
                <a asp-controller="User" asp-action="Item" asp-route-id="@user.Id" class="btn btn-primary">Подробнее</a>
            </div>
        </div>
    }
</div>