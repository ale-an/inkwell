@model BusinessLayer.Models.User.UserItemModel

@{
    Layout = "_Layout";
}

<div class="mb-3">
    <p class="fs-2">@Model.Name</p>
</div>

<div class="mb-3">
    <span>
        Email: @Model.Email
    </span>
</div>

<div class="d-flex">
    <div class="me-2">
        <a class="btn btn-outline-primary" asp-controller="User" asp-action="Update" asp-route-id="@Model.Id">Редактировать</a>
    </div>
    <div class="me-2">
        <form method="post" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" onsubmit="return confirm('Вы точно хотите удалить пользователя ' + '@Model.Name' + '?');">
            <input type="hidden" value="@Model.Id"/>
            <button class="btn btn-outline-danger" type="submit">Удалить</button>
        </form>
    </div>
    <div class="me-2">
        <a class="btn btn-outline-secondary" asp-controller="User" asp-action="List">Назад</a>
    </div>
</div>